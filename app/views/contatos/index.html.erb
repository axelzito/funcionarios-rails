<p id="notice"><%= notice %></p>

<h1>Lista de Contatos</h1>

<table>
  <thead>
    <tr>
      <th>Trabalhador</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr>
        <td><%= contato.trabalhador %></td>
        <td><%= contato.telefone %></td>
        <td><%= contato.celular %></td>
        <td><%= contato.email %></td>
        <td><%= link_to 'Show', contato %></td>
        <td><%= link_to 'Edit', edit_contato_path(contato) %></td>
        <td><%= link_to 'Destroy', contato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar novo contato', new_contato_path %>
